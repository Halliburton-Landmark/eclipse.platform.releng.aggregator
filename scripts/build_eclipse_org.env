export JAVA_HOME=${JAVA_HOME:-/shared/common/jdk1.7.0}
export MAVEN_OPTS=${MAVEN_OPTS:--Xmx2048m -Djava.io.tmpdir=${TMP_DIR}}
export MAVEN_PATH=${MAVEN_PATH:-/shared/common/apache-maven-3.0.4/bin}


