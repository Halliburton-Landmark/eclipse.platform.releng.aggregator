
# default definitions for this branch
# note, we "override" this, for now, for Eclipse Platform cronjob builds
export BUILD_ROOT=${BUILD_ROOT:-/shared/eclipse/builds}

export BRANCH=${BRANCH:-R4_2_maintenance}
